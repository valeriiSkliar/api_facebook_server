model Statistics {
  id                    Int           @id @default(autoincrement())
  date                  DateTime
  request_count          Int
  success_count          Int
  failure_count          Int
  average_response_time   Float
  cache_hit_rate          Float
  blocked_session_count   Int
  details               Json

  @@index([date])
}


